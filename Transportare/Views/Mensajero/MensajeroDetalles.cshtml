@model Transportare.Models.Mensajero

<h2>Detalles de @Html.DisplayFor(model => model.NombreCompleto)</h2>

<div>
    <h4>Mensajero</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Documento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Direccion)
        </dd>

        <dt>
            Género
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SexoDes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd>
            @Model.FechaIngreso.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "MensajeroEditar", new { id = Model.IdMensajero }) |
    @Html.ActionLink("Regresar a la Lista", "Index")
</p>
