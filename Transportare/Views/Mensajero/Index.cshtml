@model IEnumerable<Transportare.Models.Mensajero>

<h2>Lista de Mensajeros </h2>

<p>
    @Html.ActionLink("Crear Nuevo Mensajero", "MensajeroCrear")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Completo
        </th>        
        <th>
            Documento
        </th>
        <th>
            Dirección
        </th>
        <th>
            Fecha de Ingreso
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCompleto)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Documento)
        </td>
        <td>
            @item.Direccion
        </td>
        <td>
            @item.FechaIngreso.ToShortDateString()
        </td>       
        <td>
            @Html.ActionLink("Editar", "MensajeroEditar", new { id=item.IdMensajero }) |
            @Html.ActionLink("Detalles", "MensajeroDetalles", new { id=item.IdMensajero }) |
            @Html.ActionLink("Eliminar", "MensajeroEliminar", new { id=item.IdMensajero })
        </td>
    </tr>
}

</table>
