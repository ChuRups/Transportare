@model IEnumerable<Transportare.Models.Mensajero>

<h2>Lista de Mensajeros </h2>

<p>
    @Html.ActionLink("Crear Nuevo Mensajero", "MensajeroCrear")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Completo
        </th>
        <th>
            Documento
        </th>
        <th>
            Dirección
        </th>
        <th>
            Fecha de Ingreso
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Documento)
            </td>
            <td>
                @item.Direccion
            </td>
            <td>
                @item.FechaIngreso.ToShortDateString()
            </td>
            <td>
                <button type="button" value="Actualizar" title="Detalles" class="btn btn-primary"><i class="fa fa-check-square-o" aria-hidden="true"></i></button>
                @Html.ActionLink("Editar", "MensajeroEditar", new { id = item.IdMensajero }) |
                @Html.ActionLink("Detalles", "MensajeroDetalles", new { id = item.IdMensajero }) |
                @Html.ActionLink("Eliminar", "MensajeroEliminar", new { id = item.IdMensajero })
                <button type="button" value="Eliminar" title="Eliminar" class="btn btn-danger btn-delete"><i class="fa fa-minus-square-o" aria-hidden="true"></i></button>
            </td>
        </tr>
    }


</table>

<div style="color:green">
    Mostrando @Model.Count() Mensajeros
</div>

